<?xml version="1.0" encoding="UTF-8"?>

<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">
    <servers>
        <!--   郑州   -->
        <server>
            <id>ZhengZhou</id>
            <username>admin</username>
            <password>admin</password>
        </server>
        <!--   北京   -->
        <server>
            <id>BeiJing</id>
            <username>admin</username>
            <password>admin888</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>ENV-dev</id>
            <properties>
                <env>dev</env>
            </properties>
        </profile>
        <profile>
            <id>ENV-uat</id>
            <properties>
                <env>uat</env>
            </properties>
        </profile>
        <profile>
            <id>ENV-pro</id>
            <properties>
                <env>pro</env>
            </properties>
        </profile>
        <profile>
            <id>OS-Linux</id>
            <properties>
                <package1.linux.skipPack>false</package1.linux.skipPack>
            </properties>
        </profile>
        <profile>
            <id>OS-Windows</id>
            <properties>
                <package1.windows.skipPack>false</package1.windows.skipPack>
            </properties>
        </profile>
        <profile>
            <id>NEXUS-ZhengZhou</id>
            <properties>
                <!--      nexus.name与settings文件中server的id保持一致          -->
                <nexus.name>ZhengZhou</nexus.name>
                <nexus.url>http://192.168.51.9:8081</nexus.url>
            </properties>
            <repositories>
                <repository>
                    <id>ZhengZhou-central</id>
                    <name>ZhengZhou Central</name>
                    <url>http://192.168.51.9:8081/repository/maven-public/</url>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>ZhengZhou-central</id>
                    <name>ZhengZhou Central</name>
                    <url>http://192.168.51.9:8081/repository/maven-public/</url>
                </pluginRepository>
            </pluginRepositories>
        </profile>
        <profile>
            <id>NEXUS-BeiJing</id>
            <properties>
                <!--      nexus.name与settings文件中server的id保持一致          -->
                <nexus.name>BeiJing</nexus.name>
                <nexus.url>http://192.168.33.21:8081</nexus.url>
            </properties>
            <repositories>
                <repository>
                    <id>BeiJing-central</id>
                    <name>BeiJing Central</name>
                    <url>http://192.168.33.21:8081/repository/maven-public/</url>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>BeiJing-central</id>
                    <name>BeiJing Central</name>
                    <url>http://192.168.33.21:8081/repository/maven-public/</url>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>

</settings>
